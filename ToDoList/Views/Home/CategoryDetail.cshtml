<h1>Task List for @Model.GetName()</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
}

@foreach (var task in Model)
{
  <table>
    <tr>
      <th>Id</th>
      <th>Task</th>
      /*<th>Due Date</th>*/
    </tr>
    <tr>
      <td>@task.GetId()</td>
      <td>@task.GetDescription()</td>
      /*<td>@task.GetDueDate()</td>*/
    </tr>
  </table>
}

<a href="/@category.GetName()/task/add">Add Task</a>
<a href="/">Homepage</a>
